<% if user_signed_in? and current_user.admin? %>
	<%= render 'admin'%>
<% elsif user_signed_in? and !current_user.admin? %>
	<%= render 'normal_user'%>
<% else %>
	<%= render 'standard'%>
<% end %>



<% content_for :right_pane do %>
	<% unless user_signed_in?%>
		<%= button_to 'Sign-in', new_user_session_path, method: :get%>
	<% end %>
<% end %>